extends layout

block content
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
    meta( name='viewport', content='width=device-width, initial-scale=1.0' )
    meta( name='description', content='Baking Bootstrap Snippets with Jade' )
    h1= title
    p(style="text-align:center;font-size:2rem;margin-top:2.5rem;") Welcome to #{title}. In this website you will only find simple content simply shown
    .table1(style="margin-top: 10rem")
    h3 Simple array of languages
    table(class="table table-dark")
        thead
            tr
            th(scope="col") #
            th(scope="col") Simple
            th(scope="col") Less Simple
            th(scope="col") Not Simple
            th(scope="col") Not Simple at all
        tbody
            tr
                th(scope="row") 1
                td Html/css
                td Java
                td C++
                td Pascal
            tr
                th(scope="row") 2
                td PHP
                td JavaScript
                td F#
                td Assembly
            tr
                th(scope="row") 3
                td Python
                td C#
                td C
                td OCaml